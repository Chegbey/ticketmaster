<div class="section section-users-form">
  <div class="container">
    <h2>Inscription</h2>
    <div class="row">
      <div class="users-form col-xs-12 col-sm-8">
        <%= form_for @user do |f| %>
            <div class="row">
              <div class="users-form-group col-xs-12">
                <%= f.label :email, 'Adresse email' %>
                <%= f.email_field :email %>
              </div>
              <div class="users-form-group col-xs-12 col-sm-6">
                <%= f.label :password, 'Mot de passe' %>
                <%= f.password_field :password %>
              </div>
              <div class="users-form-group col-xs-12 col-sm-6">
                <%= f.label :password_confirmation, 'Confirmer le mot de passe' %>
                <%= f.password_field :password_confirmation %>
              </div>
              <div class="users-form-group col-xs-12 col-sm-6">
                <%= f.label :fav, 'Choisissez votre genre préféré' %>
                <%= select_tag(:fav, options_for_select([['Rap', 'rap'], ['Rock', 'rock'], ['Electro', 'electro']])) %>
              </div>

              <div class="users-form-group users-form-submit col-xs-12 col-sm-6">
                <%= f.submit "S'inscrire" %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>